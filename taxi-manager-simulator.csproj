<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>taxi_manager_simulator</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="ppy.SDL2-CS" Version="1.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="SDL2.SDL">
      <Static>True</Static>
    </Using>
    <Using Include="SDL2.SDL_ttf">
      <Static>True</Static>
    </Using>
  </ItemGroup>

</Project>
